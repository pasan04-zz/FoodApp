<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="197dp"
                android:paddingTop="10dp"
                android:src="@drawable/roti" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0"
                    android:text="Roti"
                    android:textColor="#000000"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_weight="0"
                    android:text="60.00"
                    android:id="@+id/rotiPrice"
                    android:textColor="#006400" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Served Hot | 144 Calories | 20g proteins"
                android:textColor="#8B4513"
                android:textSize="15dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="A an unleavened griddle bread from India which is similar to pita bread. It is also known as roti. Ideally, I use the traditional Indian roti griddle called a tava."
                android:textColor="	#696969"
                android:layout_marginRight="5dp"
                android:textSize="13dp"></TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Qty"
                    android:autoSizeMaxTextSize="2dp"
                    android:textColor="#8B4513"
                    android:textSize="15dp"></TextView>

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/myButton1"
                    android:layout_width="81dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#696969"
                    android:gravity="left">
                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

                <Button
                    android:id="@+id/Button1"
                    android:layout_width="116dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="70dp"
                    android:background="#FF0000"
                    android:text="Add to Bag"
                    android:textColor="#FFFFFF" />

            </LinearLayout>









            <ImageView
                android:layout_width="match_parent"
                android:layout_height="197dp"
                android:paddingTop="20dp"
                android:src="@drawable/pittu" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Pittu "
                    android:textColor="#000000"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:text=" 900.00"
                    android:textColor="#006400"
                    android:id="@+id/pittuPrice"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Served Hot | 163 Calories | 4.7 g proteins"
                android:textColor="#8B4513"
                android:textSize="15dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="A Sri Lankan recipe for a steamed rice flour and coconut cake. Serve with potato curry, kiri hodi (coconut sauce), or any type of gravy."
                android:textColor="	#696969"
                android:textSize="13dp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Qty"
                    android:autoSizeMaxTextSize="2dp"
                    android:textColor="#8B4513"
                    android:textSize="15dp"></TextView>


                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/myButton2"
                    android:layout_width="81dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#696969"
                    android:gravity="left">
                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

                <Button
                    android:id="@+id/Button2"
                    android:layout_width="116dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="70dp"
                    android:background="#FF0000"
                    android:text="Add to Bag"
                    android:textColor="#FFFFFF" />
            </LinearLayout>








            <ImageView
                android:layout_width="match_parent"
                android:layout_height="197dp"
                android:paddingTop="10dp"
                android:src="@drawable/noodels" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Noodles"
                    android:textColor="#000000"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="140dp"
                    android:text=" 400.00"
                    android:textColor="#006400"
                    android:id="@+id/noodleprice"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Served Hot | 163 Calories | 4.7 g proteins"
                android:textColor="#8B4513"
                android:textSize="15dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Noodles are a staple food in many cultures. They are made from unleavened dough which is stretched, extruded, or rolled flat and cut into one of a variety of shapes"
                android:textColor="	#696969"
                android:textSize="13dp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Qty"
                    android:autoSizeMaxTextSize="2dp"
                    android:textColor="#8B4513"
                    android:textSize="15dp"></TextView>


                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/myButton3"
                    android:layout_width="81dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#696969"
                    android:gravity="left"
                    android:text="Qty "></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

                <Button
                    android:id="@+id/Button3"
                    android:layout_width="116dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="70dp"
                    android:background="#FF0000"
                    android:text="Add to Bag"
                    android:textColor="#FFFFFF" />
            </LinearLayout>





            <ImageView
                android:layout_width="match_parent"
                android:layout_height="197dp"
                android:paddingTop="10dp"
                android:src="@drawable/strhopers" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="String Hoppers"
                    android:textColor="#000000"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text=" 700.00"
                    android:textColor="#006400"
                    android:id="@+id/stringhopperprice"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Served Hot | 144 Calories | 20g proteins"
                android:textColor="#8B4513"
                android:textSize="15dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Idiyappam is a traditional South Indian food made using rice flour and steamed. It is also a staple food of SriLanka . Idiyappam is usually served with stew or any any spicy side dish"
                android:textColor="	#696969"
                android:textSize="13dp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Qty"
                    android:autoSizeMaxTextSize="2dp"
                    android:textColor="#8B4513"
                    android:textSize="15dp"></TextView>


                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/myButton4"
                    android:layout_width="81dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#696969"
                    android:gravity="left"
                    android:text="Qty "></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

                <Button
                    android:id="@+id/Button4"
                    android:layout_width="116dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="70dp"
                    android:background="#FF0000"
                    android:text="Add to Bag"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>