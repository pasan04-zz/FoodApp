<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="197dp"
                android:paddingTop="10dp"
                android:src="@drawable/rice" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0"
                    android:text="Rice and Curry"
                    android:textColor="#000000"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_weight="0"
                    android:text="450.00"
                    android:textColor="#006400"
                    android:id="@+id/ricePrice" />
            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Served Hot | 144 Calories | 20g proteins"
                android:textColor="#8B4513"
                android:textSize="15dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="The rice and curry is affordable, ample in portion and consistently tasty.They don't hold back when serving you either.so you'll probably end up getting more rice than you need."
                android:textColor="	#696969"
                android:textSize="13dp"></TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/myButton1"
                    android:layout_width="81dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:background="#696969"
                    android:gravity="left"
                    android:text="Qty "></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

                <Button
                    android:id="@+id/button1"
                    android:layout_width="116dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="10dp"
                    android:background="#FF0000"
                    android:text="Add to Bag"
                    android:textColor="#FFFFFF" />

            </LinearLayout>















            <ImageView
                android:layout_width="match_parent"
                android:layout_height="197dp"
                android:paddingTop="20dp"
                android:src="@drawable/friedrice" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Fried Rice"
                    android:textColor="#000000"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:text=" 600.00"
                    android:textColor="#006400"
                    android:id="@+id/friedricePrice"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Served Hot | 163 Calories | 4.7 g proteins"
                android:textColor="#8B4513"
                android:textSize="15dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Fried rice is a dish of cooked rice that has been stir-fried in a wok or a frying pan and is usually mixed with other ingredients such as eggs, vegetables, seafood, or meat."
                android:textColor="	#696969"
                android:textSize="13dp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/myButton2"
                    android:layout_width="81dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#696969"
                    android:gravity="left"
                    android:text="Qty "></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

                <Button
                    android:id="@+id/button2"
                    android:layout_width="116dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="5dp"
                    android:background="#FF0000"
                    android:text="Add to Bag"
                    android:textColor="#FFFFFF" />
            </LinearLayout>















            <ImageView
                android:layout_width="match_parent"
                android:layout_height="197dp"
                android:paddingTop="10dp"
                android:src="@drawable/noodels" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Noodles"
                    android:textColor="#000000"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="140dp"
                    android:text="400.00"
                    android:textColor="#006400"
                    android:id="@+id/noodleprice"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Served Hot | 163 Calories | 4.7 g proteins"
                android:textColor="#8B4513"
                android:textSize="15dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Noodles are a staple food in many cultures. They are made from unleavened dough which is stretched, extruded, or rolled flat and cut into one of a variety of shapes"
                android:textColor="	#696969"
                android:textSize="13dp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/myButton3"
                    android:layout_width="81dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#696969"
                    android:gravity="left"
                    android:text="Qty "></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

                <Button
                    android:id="@+id/button3"
                    android:layout_width="116dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="5dp"
                    android:background="#FF0000"
                    android:text="Add to Bag"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

















            <ImageView
                android:layout_width="match_parent"
                android:layout_height="197dp"
                android:paddingTop="10dp"
                android:src="@drawable/biriyani6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Biryani"
                    android:textColor="#000000"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:text=" 700.00"
                    android:textColor="#006400"
                    android:id="@+id/biriyaniPrice"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Served Hot | 144 Calories | 20g proteins"
                android:textColor="#8B4513"
                android:textSize="15dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Chicken Biryani is a bold and flavorful Indian dish with crazy tender bites of chicken with bell peppers in a deliciously spiced and fragrant rice."
                android:textColor="	#696969"
                android:textSize="13dp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">


                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/myButton4"
                    android:layout_width="81dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#696969"
                    android:gravity="left"
                    android:text="Qty "></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

                <Button
                    android:id="@+id/button4"
                    android:layout_width="116dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="5dp"
                    android:background="#FF0000"
                    android:text="Add to Bag"
                    android:textColor="#FFFFFF" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>